<div class="col-md-10 mx-auto col-lg-5" id="signup_form">
  <%= form_with(model: @skater, scope: :skater, url: login_path, local: true, class: 'p-4 p-md-5 border rounded-3 bg-light shadow') do |f| %>
    <%= content_tag :legend, 'Log In', class: 'display-4' %>
    <div class="form-floating mb-3">
      <%= f.text_field :email, type: 'email', class:'form-control', id: 'floatingInput', placeholder: 'email' %>
      <%= f.label :email, 'email address' %>
    </div>
    <div class="form-floating mb-3">
      <%= f.text_field :password, type: 'password', class:'form-control', id: 'floatingInput', placeholder: 'password' %>
      <%= f.label :password, 'password' %>
    </div>
    <div class="d-flex p-3 justify-content-center">
    </div>
    <%= f.submit 'Log in', class: 'btn btn-primary w-100 btn-lg' %>
  <% end %>
</div>
</div>
