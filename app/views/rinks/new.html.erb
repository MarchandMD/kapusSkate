<div class="row flex-column align-items-center">
<div class="col-6 text-center">
  <h3>Add a Rink</h3>
</div>
  <div class="col-6">
    <%= form_with(url: "/rinks", method: :post,  local: true) do |f| %>
      <table>
        <tr>
          <td><%= f.label :name, 'Name of Rink:' %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :address, 'Street Address:' %></td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td><%= f.label :city, 'City' %></td>
          <td><%= f.text_field :city %></td>
        </tr>
        <tr>
          <td><%= f.label :state, 'State:' %></td>
          <td><%= f.text_field :state  %></td>
        </tr>
        <tr>
          <td><%= f.label :phone, 'Phone:' %></td>
          <td><%= f.text_field :phone %></td>
        </tr>
        <tr>
        <td> </td>
        <td><%= f.submit "Add Rink", class: 'btn btn-primary' %></td></tr>
      </table>
    <% end %>
  </div>
</div>
