<div class="container border border-1">
  <div class="row">
    <div class="col">
      <h3>Details for skate on <%= @skate.date.strftime('%A, %B %e, %Y') %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col"><%= @skate.inspect %></div>
  </div>
  <div class="row">
    <div class="col">
      <%= @skate.skaters.count %>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex flex-column align-items-center">
      <div><%= @skate.id %></div>
      <div><%= @skate.created_at %></div>
      <div>
        <%= @skate.updated_at %>
      </div>
      <div>
        <%= @skate.date %>
      </div>
    </div>
  </div>
</div>
