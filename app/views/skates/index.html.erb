<div class="row">
<div class="col">
	<h1 class="display-2">Upcoming skates:</h1>
	<div class="col">
		<%= link_to 'Add a skate', new_skate_path, class: 'btn btn-primary' %>
	</div>
</div>
</div>
<div class="row">
	<div class="col">
		<table class="table table-sm table-hover">
			<tr>
				<th><%= link_to 'date', :sort => 'date' %></th>
				<th><%= link_to 'id', :sort => 'id' %></th>
				<th></th>
				<th></th>
			</tr>
			<% @skates.each do |skate| %>
				<tr>
					<td><%= link_to "#{skate.date.strftime('%a %b %d, %Y')}", skate_path(skate.id), class: "text-decoration-none" %></td>
					<td><%= skate.id %></td>
					<td><%= link_to 'edit', edit_skate_path(skate) %></td>
					<td><%= link_to 'delete', skate_path(skate), method: :delete, data: {confirm: 'are you sure?'} %></td>
				</tr>
			<% end %>
		</table>
	</div>
</div>
