<div class="container">
  <div class="row justify-content-center">
    <div class="col-2 p-3">
      <%= link_to 'create a skater', new_skater_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="row">
    <div class="col border border-1">
      <%= form_with(scope: :skater, url: '/skaters', method: :get, local: true) do |f| %>
        <%= f.text_field :search_term, placeholder: 'search for a player' %>
        <%= f.submit 'search' %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= render partial: 'partials/skaters' %>
  </div>
</div>
